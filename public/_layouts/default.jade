                            li
                                a( href="https://bitbucket.org/codemonkey800" )
                                    p Bitbucket
                    .col-md-4.col-xs-6
                        h5.footer-list-title Contact
                        ul
                            li
                                a( href="mailto:jeremyasuncion808@gmail.com" )
                                    p Email
                            li
                                a( href="https://www.facebook.com/codemonkey800" )
                                    p Facebook
                            li
                                a( href="https://twitter.com/codemonkey800" )
                                    p Twitter
                            li
                                a( href="http://goo.gl/MepiYN" )
                                    p Linkedin
                .row#footer-row
                    .col-md-4.col-xs-1
                    .col-md-1.col-xs-3#footer-logo-col
                        a( href="/index" )
                            img.img-responsive#footer-logo( src="/images/footer-logo.svg" )
                    .col-md-4
                        h1.footer-title Jerms' Blog

