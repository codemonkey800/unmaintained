extends ../../_layouts/default

block title
    title #harpjs - Page 1

block content
    - var postData = [{"date":"9-24-2014","title":"Why I switched to Harp","desc":"Harp.js is a static site generator that is a module of Node.js. Switching was a matter of personal preference, and here's why.","tags":{"#nodejs":"/filter/nodejs/1","#harpjs":"/filter/harpjs/1","#javascript":"/filter/javascript/1","#dev-blog":"/filter/dev-blog/1","#web-development":"/filter/web-development/1"},"banner":"http://goo.gl/iSI1zV","url":"/posts/9-24-2014-why-i-switched-to-harp/why-i-switched-to-harp"}]
    - for( var i = 0; i < 1; i++ ) {
        .row
            .col-md-3
            .col-md-6
                .well.well-lg
                    .jumbotron.post-banner
                        a( href=postData[ i ].url + '.html' )
                            img.img-responsive( src=postData[ i ].banner )
                    h1.post-title
                        a( href=postData[ i ].url + '.html' )
                            != postData[ i ].title
                    h6.post-date: != postData[ i ].date
                    h4.post-description: != postData[ i ].desc
                    h6.post-tags
                        - for( var hashtag in postData[ i ].tags ) {
                            - var tagUrl = postData[ i ].tags[ hashtag ] + '.html';
                            a.hashtag( href=tagUrl ): != hashtag + ' '
                        - }
                    - var postComments = postData[ i ].url + '.html#disqus_thread'
                    h6
                        a( href=postComments )
            .col-md-3
    - }
    - if( 1 !== 1 ) { // Check if we only have one pagination
        .text-center
            ul.pagination.center-block
                - for( var i = 0; i < 1; i++ ) {
                    - var pageLink;
                    - if( i === 0 ) {
                        - pageLink = '/filter/harpjs/1.html';
                    - } else {
                        - pageLink = '/filter/harpjs/' + ( i + 1 ) + '.html';
                    - }
                    - if( i === 0 ) {
                        li.active
                            a( href=pageLink ): != i + 1
                    - } else {
                        li 
                            a( href=pageLink ): != i + 1
                    - }
                - }
    - }

