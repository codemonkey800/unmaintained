extends ../../_layouts/default

block title
    title #oop - Page 1

block content
    - var postData = [{"date":"11-16-2014","title":"Object Oriented JavaScript","desc":"JavaScript is a really quirky language. It doesn't support the notion of classes like traditional OOP languages. But that doesn't stop it from being OOP.","tags":{"#javascript":"/filter/javascript/1","#oop":"/filter/oop/1"},"banner":"http://goo.gl/xvWkn","url":"/posts/11-16-2014-object-oriented-javascript/object-oriented-javascript"}]
    - for( var i = 0; i < 1; i++ ) {
        .row
            .col-md-3
            .col-md-6
                .well.well-lg
                    .jumbotron.post-banner
                        a( href=postData[ i ].url + '.html' )
                            img.img-responsive( src=postData[ i ].banner )
                    h1.post-title
                        a( href=postData[ i ].url + '.html' )
                            != postData[ i ].title
                    h6.post-date: != postData[ i ].date
                    h4.post-description: != postData[ i ].desc
                    h6.post-tags
                        - for( var hashtag in postData[ i ].tags ) {
                            - var tagUrl = postData[ i ].tags[ hashtag ] + '.html';
                            a.hashtag( href=tagUrl ): != hashtag + ' '
                        - }
                    - var postComments = postData[ i ].url + '.html#disqus_thread'
                    h6
                        a( href=postComments )
            .col-md-3
    - }
    - if( 1 !== 1 ) { // Check if we only have one pagination
        .text-center
            ul.pagination.center-block
                - for( var i = 0; i < 1; i++ ) {
                    - var pageLink;
                    - if( i === 0 ) {
                        - pageLink = '/filter/oop/1.html';
                    - } else {
                        - pageLink = '/filter/oop/' + ( i + 1 ) + '.html';
                    - }
                    - if( i === 0 ) {
                        li.active
                            a( href=pageLink ): != i + 1
                    - } else {
                        li 
                            a( href=pageLink ): != i + 1
                    - }
                - }
    - }

